<h2>検索結果</h2>
    <table class='table table-hover table-inverse'>
    <thead>
        <tr>
        <th></th>
        <th>Title</th>
        <th>Reading_status</th>
        <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @tsundoku_searched.each do |tsundoku| %>
        <tr>
            <td>
                <% if tsundoku.book.image.attached? %>
                    <%= image_tag tsundoku.book.image, format: "jpeg", fallback: "no_image.jpg", size:"50x50" %>
                <% else %>
                    <%= image_tag "no_image.png", size:"50x50" %>
                <% end %>
            </td>
            <td>
            <%= tsundoku.book.title %>
            </td>
            <td>
            <%= form_with model:[tsundoku.book, tsundoku], local:true do |f| %>
                <%= f.select :reading_status, options_for_select([['買っただけ', 0], ['読み途中', 1], ['読了', 2]], tsundoku.reading_status), {}, class: "form-control" %>
                <%= f.submit "Update Status", class: "btn btn-success" %>
            <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
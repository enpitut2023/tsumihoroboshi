<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">

      <% if @book.image_url.present? %>
        <div class="text-center mb-3">
          <%= image_tag @book.image_url, class: "img-fluid" %>
        </div>
      <% elsif @book.image.attached? %>
        <div class="text-center mb-3">
          <%= image_tag @book.image, format: "jpeg", fallback: "no_image.jpg", size:"50x75" %>
        </div>
      <% end %>

      <h5 class="card-title text-center"><%= @book.title %></h5>
      <p class="card-text text-center"><%= @book.body %></p>

      <% if current_user.present? %>
        <div class="text-center mb-3">
          <%= link_to "積み本登録", book_tsundokus_path(@book.id), method: :post, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<p class="card-text text-center mt-4">この本を読んでいるユーザ</p>
<!-- tsundokusのuser_idカラムとusersのuser_idが等しいuserを全て表示する -->
<div class="container mt-4">
  <div class="card shadow-s">
  <% @tsundokus.each do |tsundoku| %>
    <div class="row">

      <div class="col-4">
      <% if tsundoku.user.image.attached? %>
      <%= image_tag tsundoku.user.image, format: "jpeg", fallback: "no_image.jpg", class: "nav-image ", size: "100x100" %>
      <% end %>
      </div>
      <div class="col-4">
      <%= link_to tsundoku.user.name, user_path(tsundoku.user.id)%>
      </div>
      <div class="col-4">
        レベル<%= tsundoku.user.current_level %>
      </div>

    </div>
    <% end %>
  </div>
</div>


